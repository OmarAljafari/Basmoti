            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="reserve-form">
                        <h3 class="reserv-title">Reservation Form</h3>
                        <form asp-action="BookTable" asp-controller="Home">
                            
                            @* <div asp-validation-summary="ModelOnly" class="text-danger"></div> *@
                            <div class="reserve-form-top">
                                <input asp-for="@Model.TransactionBookTable.TransactionBookTableFullName" placeholder="Full name">

                                <span asp-validation-for="TransactionBookTable.TransactionBookTableFullName" class="text-danger"></span>


                                <input asp-for="@Model.TransactionBookTable.TransactionBookTableEmail" placeholder="Email address">
                                <span asp-validation-for="TransactionBookTable.TransactionBookTableEmail" class="text-danger"></span>

                                <input asp-for="@Model.TransactionBookTable.TransactionBookTableMobileNumber" placeholder="Mobile number">

                                <span asp-validation-for="TransactionBookTable.TransactionBookTableMobileNumber" class="text-danger"></span>
                                <div class="date-time">
                                    <select asp-for="@Model.TransactionBookTable.TransactionBookTableDate">
                                        <option selected="">Select Date And Time</option>
                                        <option>26 Dec - 10.00pm</option>
                                        <option>2 Jan - 10.00pm</option>
                                        <option>17 Dec - 10.00pm</option>
                                    </select>
                                    <span asp-validation-for="TransactionBookTable.TransactionBookTableDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="reserve-submit mt-40">
                                <button type="submit"> submit </button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="book-img">
                        <img src="~/assets/img/banner/table.png" alt="">
                    </div>
