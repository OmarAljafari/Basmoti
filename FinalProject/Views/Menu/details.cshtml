@model FinalProject.ViewModels.MenuViewModel

@{
    ViewData["Title"] = "details";
    Layout = "_Layout2";
}

<div class="breadcrumb-area bg-img ptb-80" style="background-image:url(/assets/img/banner/breath.jpg);">
    <div class="container">
        <div class="breadcrumb-content text-center">
            <h3>blog sidebar</h3>
            <ul>
                <li>
                    <a href="index.html">Home</a>
                </li>
                <li class="active">blog details </li>
            </ul>
        </div>
    </div>
</div>
<div class="blog-area pt-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-xl-9 ">
                <div class="blog-details-wrapper">
                    <div class="single-blog-wrapper">
                        <div class="blog-img mb-30">
                            <a href="#">
                                <img src="~/Img/@Model.Menu.MasterItemMenuImageUrl" alt="">
                            </a>
                            <span class="blogpost-time-date">
                                <span class="date">@Model.Menu.MasterItemMenuDate.Value.Day</span>
                                <span class="month">@Model.Menu.MasterItemMenuDate.Value.ToString("MMM")</span>
                            </span>
                        </div>
                        <h2>
                            @Model.Menu.MasterItemMenuTitle
                        </h2>
                        <p>@Model.Menu.MasterItemMenuBreef </p>
                        <blockquote class="importent-title">
                            <h4>@Model.Menu.MasterItemMenuBreef</h4>
                        </blockquote>
                        <p>@Model.Menu.MasterItemMenuDesc</p>

                    </div>


                </div>
            </div>
            <div class="col-lg-4 col-xl-3">
                <div class="sidebar-wrapper gray-bg-7 shop-sidebar-mrg">

                    <div class="sidebar-widget">
                        <h4 class="sidebar-title">Recent Posts</h4>
                        <div class="recent-posts-wrap mt-30">
                            @foreach(var item in Model.ListItem){
                                <div class="single-recent-posts mb-20">
                                    <div class="recent-posts-img">
                                        <img src="~/Img/@item.MasterItemMenuImageUrl" alt="">
                                    </div>
                                    <div class="recent-posts-content">
                                        <h4>
                                            <a >@item.MasterItemMenuTitle</a>
                                        </h4>
                                        
                                        <span> @item.MasterItemMenuDate </span>
                                    </div>
                                </div>

                            }
