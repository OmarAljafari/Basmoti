@model FinalProject.Areas.Admin.ViewModels.Register

@{
    ViewData["Title"] = "Create";
}

<div class="row justify-content-center">
<div class="col-lg-7">
<div class="card">
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="RegisterName" class="control-label"></label>
                <input asp-for="RegisterName" class="form-control" />
                <span asp-validation-for="RegisterName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterPassword" class="control-label"></label>
                <input asp-for="RegisterPassword" class="form-control" />
                <span asp-validation-for="RegisterPassword" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="RegisterEmail" class="control-label"></label>
                <input asp-for="RegisterEmail" class="form-control" />
                <span asp-validation-for="RegisterEmail" class="text-danger"></span>
            </div>


            <div class="form-group">
                  <label asp-for="RegisterAccept" class="control-label">
                         <input asp-for="RegisterAccept" /> I agree and accept the terms and conditions
                  </label>

                 <span asp-validation-for="RegisterAccept" class="text-danger"></span>
             </div>


            <div class="form-group mt-3">
                <input type="submit" value="Create Account" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
</div>

<div>
    <a asp-action="Index" class="text-center">Back to List</a>
</div>

</div>