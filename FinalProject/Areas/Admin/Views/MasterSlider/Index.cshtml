@model IEnumerable<FinalProject.Models.MasterSlider>

@{
    ViewData["Title"] = "Index";
}



<p>
    <a asp-action="Create">Create New</a>
</p>
<section class="section col-lg-12">

    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MasterSliderTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MasterSliderBreef)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MasterSliderDesc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MasterSliderImg)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MasterSliderTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MasterSliderBreef)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MasterSliderDesc)
            </td>
            <td>
                <img src="~/Img/@item.MasterSliderImg" style="max-width:90px;max-height:90px" />
            </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.MasterSliderId"><i class="bi bi-pencil-square"> </i></a> |
                    <a class="butDele" href="" data-bs-toggle="modal" data-bs-target="#verticalycentered" data-bf="@Url.ActionLink("Delete","MasterSlider",new{idDelete = item.MasterSliderId})"><i class="bi bi-trash"></i></a> |
                    @if (item.IsActive)
                    {
                        <a asp-action="Active" asp-route-idActive="@item.MasterSliderId"> <i class="bi bi-eye"></i> </a>
                    }
                    else
                    {
                        <a asp-action="Active" asp-route-idActive="@item.MasterSliderId"> <i class="bi bi-eye-slash"></i> </a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

</div>
</div>
</div>
</div>
</section>

<div class="modal fade" id="verticalycentered" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure?

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="cancelDelt" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-danger" id="confirmDelt">Delete</button>
            </div>
        </div>
    </div>
</div>

<script>
    var data = "";
    $(".butDele").click(function () {
        data = $(this).data("bf");
    })

    $("#confirmDelt").click(function () {
        window.location = data;
        data = ""
    })

    $("#cancelDelt").click(function () {
        data = ""
    })
</script>