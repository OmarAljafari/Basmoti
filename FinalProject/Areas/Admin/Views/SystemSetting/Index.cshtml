@model IEnumerable<FinalProject.Models.SystemSetting>

@{
    ViewData["Title"] = "Index";
}



<p>
    <a asp-action="Create">Create New</a>
</p>
<section class="section col-lg-12">

    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SystemSettingLogoImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SystemSettingLogoImageUrl2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SystemSettingCopyright)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SystemSettingWelcomeNoteTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SystemSettingWelcomeNoteBreef)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.SystemSettingWelcomeNoteUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SystemSettingWelcomeNoteImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SystemSettingMapLocation)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="~/Img/@item.SystemSettingLogoImageUrl" style="max-width:90px;max-height:90px"/>
            </td>
            <td>
                <img src="~/Img/@item.SystemSettingLogoImageUrl2" style="max-width:90px;max-height:90px" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SystemSettingCopyright)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SystemSettingWelcomeNoteTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SystemSettingWelcomeNoteBreef)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.SystemSettingWelcomeNoteUrl)
            </td>
            <td>
               <img src="~/Img/@item.SystemSettingWelcomeNoteImageUrl" style="max-width:90px;max-height:90px"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SystemSettingMapLocation)
            </td>
           
            <td>
                <a asp-action="Edit" asp-route-id="@item.SystemSettingId"><i class="bi bi-pencil-square"> </i> </a> |
                <a class="butDele" href="" data-bs-toggle="modal" data-bs-target="#verticalycentered" data-bf="@Url.ActionLink("Delete","SystemSetting",new{idDelete = item.SystemSettingId})"> <i class="bi bi-trash"></i></a> |
                    @if (item.IsActive)
                    {
                        <a asp-action="Active" asp-route-idActive="@item.SystemSettingId"><i class="bi bi-eye"></i></a>
                    }
                    else
                    {
                        <a asp-action="Active" asp-route-idActive="@item.SystemSettingId">
                            <i class="bi bi-eye-slash"></i>

                        </a>

                    }
                
            </td>
        </tr>
}
    </tbody>
</table>
</div>
</div>
</div>
</div>
</section>

<div class="modal fade" id="verticalycentered" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure?

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="cancelDelt" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-danger" id="confirmDelt">Delete</button>
            </div>
        </div>
    </div>
</div>

<script>
    var data = "";
    $(".butDele").click(function () {
        data = $(this).data("bf");
    })

    $("#confirmDelt").click(function () {
        window.location = data;
        data = "";
    })

    $("#cancelDelt").click(function () {
        data = "";
    })

</script>