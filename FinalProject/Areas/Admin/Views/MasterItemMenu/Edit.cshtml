@model FinalProject.Areas.Admin.ViewModels.MasterItemMenuViewModel

@{
    ViewData["Title"] = "Edit";
}
<div class="row justify-content-center">
    <div class="col-lg-7">
        <div class="card">
            <div class="card-body">
        <form asp-action="Edit" enctype="multipart/form-data" class="row g-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MasterItemMenuId" />
            <div  class="form-group ">
                <label asp-for="MasterCategoryMenuId" class="control-label"></label>
                <select asp-for="MasterCategoryMenuId" id="inputState" class="form-select" asp-items="@(new SelectList(ViewBag.MasterCategoryMenuList,"MasterCategoryMenuId","MasterCategoryMenuName"))"></select>
          @*       <select asp-for="MasterCategoryMenuId" class="form-control" asp-items="@(new SelectList(ViewBag.MasterCategoryMenuList,"MasterCategoryMenuId","MasterCategoryMenuName"))"></select> *@
                <span asp-validation-for="MasterCategoryMenuId" class="text-danger"></span>
            </div>
            <div class="form-group ">
                <label asp-for="MasterItemMenuTitle" class="control-label"></label>
                <input asp-for="MasterItemMenuTitle" class="form-control" />
                <span asp-validation-for="MasterItemMenuTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MasterItemMenuBreef" class="control-label"></label>
                <input asp-for="MasterItemMenuBreef" class="form-control" />
                <span asp-validation-for="MasterItemMenuBreef" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MasterItemMenuDesc" class="control-label"></label>
                <input asp-for="MasterItemMenuDesc" class="form-control" />
                <span asp-validation-for="MasterItemMenuDesc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MasterItemMenuPrice" class="control-label"></label>
                <input asp-for="MasterItemMenuPrice" class="form-control" />
                <span asp-validation-for="MasterItemMenuPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="file" class="control-label"></label>
                <input asp-for="file" class="form-control" />
                <span asp-validation-for="file" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MasterItemMenuDate" class="control-label"></label>
                <input asp-for="MasterItemMenuDate" class="form-control" />
                <span asp-validation-for="MasterItemMenuDate" class="text-danger"></span>
            </div>
            <div hidden class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>
            <div hidden class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsDelete" /> @Html.DisplayNameFor(model => model.IsDelete)
                </label>
            </div>
            <div hidden class="form-group">
                <label asp-for="CreateUser" class="control-label"></label>
                <input asp-for="CreateUser" class="form-control" />
                <span asp-validation-for="CreateUser" class="text-danger"></span>
            </div>
            <div hidden class="form-group">
                <label asp-for="CreateDate" class="control-label"></label>
                <input asp-for="CreateDate" class="form-control" />
                <span asp-validation-for="CreateDate" class="text-danger"></span>
            </div>
            <input asp-for="MasterItemMenuImageUrl" hidden />
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
</div>
<div class="text-center">
    <a asp-action="Index">Back to List</a>
</div>

</div>